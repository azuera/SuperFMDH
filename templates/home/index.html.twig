{% extends 'base.html.twig' %}
   {% block title %}Annonces Immobili√®res{% endblock %}
{% block stylesheets %}
    <link type="text/css" href="{{ asset('styles/home.css') }}">
{% endblock %}

{% block body %}
    <main class="container mx-auto px-6 py-8">
        
        <h1 class="text-2xl font-semibold text-gray-900 mb-1">Nos annonces de maisons</h1>
        <hr class="h-px mb-8 bg-gray-300 border-0 dark:bg-gray-700">

        <div class="row"> 
            {% for property in properties %}
                <div class="col-md-4 mb-4"> 
                    {% include '_partials/_card.html.twig' with {'property': property} %}
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-gray-500">Aucune maison disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>

        
        <h1 class="text-2xl font-semibold text-gray-900 mb-1 mt-20">Nos annonces d'appartements</h1>
        <hr class="h-px mb-8 bg-gray-300 border-0 dark:bg-gray-700">

        <div class="row"> 
            {% for property in properties %}
                <div class="col-md-4 mb-4"> 
                    {% include '_partials/_card.html.twig'  %}
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-gray-500">Aucun appartement disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}

